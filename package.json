        "xhr",
        "axios"
    ],
    "author": "lopo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/lopo12123/better-xhr/issues"
    },
    "homepage": "https://github.com/lopo12123/better-xhr#readme",
    "files": [
        "dist",
        "lib"
    ],
    "devDependencies": {
        "@rollup/plugin-typescript": "^8.3.3",
        "rollup": "^2.75.7",
        "rollup-plugin-terser": "^7.0.2",
        "tslib": "^2.4.0",
        "typescript": "^4.7.4"
    },
